{
    // typescript + eslint + prettier
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "env": {
        "node": true
    },
    "rules": {
        "@typescript-eslint/no-namespace": "off",
        "prettier/prettier": "error"
    }
}